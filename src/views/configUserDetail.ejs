<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Cook - Home'}) %>
<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->
	
	<div class="container-fluid">
		<div class="row">
			<div class="col-3">
	<!-- Barra -->
	<%- include('partials/barra') %>
	<!-- /Barra -->
			</div>

			<div class="col-9">

                <p class="titEmp">Detalle del usuario <%= usuarios.first_name %> - <%= usuarios.last_name %></p>

                <div class="datosEmp">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Datos del Usuario</a>
                    </li>
                    
                    
                  </ul>
                  <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

                        <form action="" method="POST">
                            <section class="datos">
                                
                                <label for="email">Email</label>
                                <input class="configUser" name="email" type="text" value="<%= usuarios.email %>">
                                <label for="type">Tipo Usuario</label>
                                <input class="configUser" type="text" name="type" value="<%= usuarios.types.name %>">
                                <label for="block">Bloqueo Pass</label>
                                <select class="configUser" name="block" id="block">
                                  <option value="1" <%= (usuarios.block == 1) ? 'selected' : '' %> selected>Bloqueado</option>
                                  <option value="0" <%= (usuarios.block == 0) ? 'selected' : '' %>>Habilitado</option>
                                </select>

                                <label for="first_name">Fecha Creaci√≥n</label>
                                <input class="configUser" type="text" name="first_name" value="<%= usuarios.first_name %>">
                                <button class="botonConfigUser" type="submit">Guardar Cambios</button>
                            </section>
                        </form>

                    </div>
                    
                  </div>
				</div>
				

			</div>

		</div>
	</div>
	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>