<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Cook - Home'}) %>
<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->
	
	<div class="container-fluid">
		<div class="row">
			<div class="col-3">
	<!-- Barra -->
	<%- include('partials/barra') %>
	<!-- /Barra -->
			</div>

			<div class="col-9">
				<br>
				<h4 class="home">Configuraciones del Sistema</h4>
				<div class="row">
					
						<% for(let i=0;i<acceso.length; i++){ %>
						
						<div class="card bg-light mb-3" style="max-width: 18rem;">
							<div class="card-header">Edificio <%= acceso[i].location_id.id %> - <%= acceso[i].location_id.name %></div>
							<div class="card-body">
							  <h5 class="card-title"><a href="/tulugar/detalle/<%= acceso[i].id %>">Area <%= acceso[i].id %> - <%= acceso[i].name %></a></h5>
							  <p class="card-text">Lugares Libres: <%= deskLibres.length %></p>
							  <p class="card-text">Lugares En Uso: <%= deskOcupados.length %></p>
							  <p class="card-text">Lugares Reservados: <%= deskReservados.length %></p>
							  <p class="card-text">Lugares Pendientes Limpieza: <%= deskPendLimpieza.length %></p>
							</div>
						  </div>

						<% } %>

					<!--<%- include('partials/escritorios') %>-->
				
				</div>
			</div>

		</div>
	</div>
	
	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>